
@{
    ViewBag.Title = "Identification";
}

<video autoplay muted loop id="video-bg-identification">
    <source src="@Href("../../Images/Home_work.mp4")" type="video/mp4">
</video>

<div class="identification-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 class="text-center">Welcome to MapApp!</h1>
                            </div>
                        </div>
                        <div class="row position-relative">
                            <div class="col-md-6 col-sm-12">
                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginForm", role = "form" }))
                                {
                                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                                    @Html.AntiForgeryToken()
                                    <h2>Sign In</h2>
                                    <div class="form-group">
                                        <label for="loginForm_Email">Email address</label>
                                        <input type="text" class="form-control" id="loginForm_Email" name="UserName" placeholder="Enter username">
                                    </div>
                                    <div class="form-group">
                                        <label for="loginForm_Password">Password</label>
                                        <input type="password" class="form-control" id="loginForm_Password" name="Password" placeholder="Password">
                                    </div>
                                    <button type="submit" id="loginForm_btn" class="btn btn-outline-primary btn-block">Sign In</button>
                                }
                            </div>
                            <div class="col-md-6 col-sm-12">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "registerForm", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <h2>Sign Up</h2>
                                    <div class="form-group">
                                        <label for="registerForm_UserName">User Name</label>
                                        <input type="text" class="form-control" id="registerForm_UserName" name="UserName" aria-describedby="emailHelp" placeholder="Enter user name">
                                    </div>
                                    <div class="form-group">
                                        <label for="registerForm_Email">Email address</label>
                                        <input type="email" class="form-control" id="registerForm_Email" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="registerForm_FirstName">First Name</label>
                                                <input type="text" class="form-control" id="registerForm_FirstName" name="FirstName" aria-describedby="emailHelp" placeholder="Enter first name">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="registerForm_LastName">Last Name</label>
                                                <input type="text" class="form-control" id="registerForm_LastName" name="LastName" aria-describedby="emailHelp" placeholder="Enter last name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="registerForm_Password">Password</label>
                                        <input type="password" class="form-control" id="registerForm_Password" name="Password" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <label for="registerForm_confirmPassword">Confirm Password</label>
                                        <input type="password" class="form-control" id="registerForm_confirmPassword" name="PasswordConfirm" placeholder="Confirm password">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewData.ModelState != null && ViewData.ModelState.Count > 0)
{
    <div class="alert alert-danger alert-popup">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.ValidationSummary()
    </div>
}
else
{
    <p>addas</p>
}
